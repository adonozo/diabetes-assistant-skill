{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "node",
    "rootDir": "lambda",
    "outDir": "dist",
    "sourceMap": false,
    "allowJs": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": [
    "/**/node_modules",
    "**/*.spec.ts",
  ],
  "include": ["lambda"]
}
